#!/bin/bash

EXTRA_ARGS=$@

rm -rf CMakeFiles
rm -f CMakeCache.txt

cmake \
 -D CMAKE_VERBOSE_MAKEFILE:BOOL=ON \
 -D CMAKE_BUILD_TYPE:STRING=RELEASE \
 -D CMAKE_C_FLAGS:STRING="-DWITH_MPI -g"\
 \
 -D CMAKE_C_COMPILER:STRING=mpicc \
 -D CMAKE_CXX_COMPILER:STRING=mpiCC \
 -D CMAKE_CXX_FLAGS:STRING="-DWITH_MPI -g"\
 \
 -D CMAKE_EXE_LINKER_FLAGS:STRING="-lpthread" \
 \
 -D CMAKE_INSTALL_PREFIX:PATH=".." \
 \
 -D KokkosArray_ENABLE_DeviceCuda:BOOL=OFF \
 -D TPL_ENABLE_HWLOC:BOOL=OFF \
 -D TPL_ENABLE_Pthread:BOOL=ON \
 $EXTRA_ARGS ..
